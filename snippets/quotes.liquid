<style>
    #davi_theme{
        padding: 20px;
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }
    .bg-warning{
        background-color: #ffc107 !important;
    }
    .bg-info{
        background-color: #0dcaf0 !important;
    }
    .bg-success{
        background-color: #198754 !important;
    }
  
#customer_login_link{
  color: blue;
}
</style>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js" defer></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.3.1/jspdf.umd.min.js"></script>

<link href="https://cdn.datatables.net/v/dt/dt-1.13.4/datatables.min.css" rel="stylesheet"/>
<script src="https://cdn.datatables.net/v/dt/dt-1.13.4/datatables.min.js" defer></script>
<div id="davi_theme" data-shop="{{ shop.domain }}" data-customer_email="{{ customer.email }}">
    {%if customer %}
    <div class="loader" style="text-align:center; display:flex; justify-content:center"><img src="https://daviapp.solcoder.com/public/uploads/loader/Loader.gif" width="200" height="200"></div>
        <table id="quotes_table" style="display:none">
            <thead>
                <th>S. no.</th>
                <th>Referrence Number</th>
                <th>Form</th>
                <th>Status</th>
                <th>Price</th>
                <th></th>
            </thead>
            <tbody id="quotes" style='text-align:center'>
            </tbody>

        </table>
    </div>
<script>
    setTimeout(function(){
        $(document).ready(function() {
          // Attach event listener to download buttons
          $('#quotes_table').on('click', '.downloa_pdf', function() {
            // Get the ref_number attribute from the button's parent row
            const refNumber = $(this).data('ref_number');
        
            // Build the URL with the ref_number parameter
            const url = `https://davimakers.com/pages/quotation-view?ref_number=${refNumber}`;
        
            // Fetch the HTML content from the URL
            $.get(url, function(data) {
              // Filter out the content with id "davi_theme"
              const filteredHtml = $(data).find('#davi_theme').html();
        
              // Create a new jsPDF instance
              const doc = new jsPDF();
        
              // Convert the HTML content to PDF
              doc.fromHTML(filteredHtml, 15, 15, {
                'width': 170
              });
        
              // Generate a data URL for the PDF file
              const pdfData = doc.output('dataurl');
        
              // Create a link with the data URL and trigger the download
              const link = document.createElement('a');
              link.href = pdfData;
              link.download = 'quotation.pdf';
              link.click();
            });
          });
        });

        console.log(jQuery('#davi_theme').attr('data-customer_email'));
        var shop = jQuery('#davi_theme').attr('data-shop');
        var customer_email = jQuery('#davi_theme').attr('data-customer_email');
        var data = {
        shop: shop,
        customer_email: customer_email,
        };

        fetch("/apps/sdta/get_quotes", {
            method: "POST",
            body: JSON.stringify(data),
            headers: {
                "Content-Type": "application/json",
            },
        })
        .then(function (response) {
            return response.json();
        })
        .then(function (response) {
            jQuery("#quotes").html(response);
            setTimeout(function(){
                
                jQuery('.loader').hide();
                jQuery("#quotes_table").show();
                if(response.contains('No Record Found')){
                
                }
                else{
                    jQuery("#quotes_table").DataTable({
                        "ordering": false,
                        "lengthChange": false,
                        "sorting": false
            
                    });
                }
                {% comment %} jQuery("#quotes_table_filter").css("float", "left"); {% endcomment %}
            }, 2000);
        })
    }, 2000);
</script>
{% else %}
    <p>To see list of Quotes, Please {{ 'Login' | customer_login_link }}  now and visit here again.</p>
{% endif %}